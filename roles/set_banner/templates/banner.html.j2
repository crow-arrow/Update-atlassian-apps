<div style="
  position: relative;
  background: linear-gradient(135deg, #1b2d1f 20%, #000000 40%, #1b2d1f 60%);
  padding: 20px 60px;
  font-family: 'Lato', Arial, sans-serif;
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 20px;
  mask-image: linear-gradient(
    to right,
    rgba(0, 0, 0, 0) 0%,
    rgba(0, 0, 0, 0.15) 5%,
    rgba(0, 0, 0, 0.6) 10%,
    rgba(0, 0, 0, 1) 20%,
    rgba(0, 0, 0, 1) 80%,
    rgba(0, 0, 0, 0.6) 90%,
    rgba(0, 0, 0, 0.15) 95%,
    rgba(0, 0, 0, 0) 100%
  );
  -webkit-mask-image: linear-gradient(
    to right,
    rgba(0, 0, 0, 0) 0%,
    rgba(0, 0, 0, 0.5) 2%,
    rgba(0, 0, 0, 1) 5%,
    rgba(0, 0, 0, 1) 95%,
    rgba(0, 0, 0, 0.5) 98%,
    rgba(0, 0, 0, 0) 100%
  );
">

  <!-- === ЛЕВАЯ КОЛОНКА === -->
  <div style="display: flex; flex-direction: column; gap: 18px; position: relative; z-index: 1;">
    <div style="
      font-size: 12px;
      text-transform: uppercase;
      letter-spacing: 1px;
      color: #8bf771;
    ">
      Test Environment
    </div>

    <div style="margin-block: 16px;">
      <a href="https://{{ instance }}.{{ domain }}/" style="
        background: #8bf771;
        color: #000000;
        text-decoration: none;
        font-weight: 700;
        border-radius: 50px;
        padding: 12px 26px;
        box-shadow: 0 0 18px #8bf77166;
        transition: all 0.3s ease;
      " onmouseover="this.style.boxShadow='0 0 30px #8bf771aa';" onmouseout="this.style.boxShadow='0 0 18px #8bf77166';">
        {{ instance }} →
      </a>
    </div>

    <div style="
      font-size: 10px;
      color: #8bf771;
    ">
      Data Set: {{ banner_date }}
    </div>
  </div>

  <!-- === ПРАВАЯ КОЛОНКА === -->
  <div style="display: flex; flex-direction: column; gap: 20px; align-items: center; justify-content: center;">
    <div style="font-size: 18px; color: orange;">
      Do not store productive data
    </div>
    {% if instance == "dedicated-itgm-jira" or instance == "pilot-aftersales" %}
    <div style="
      background: linear-gradient(90deg, rgba(34,136,72,0.4) 0%, rgba(139,247,113,0.25) 100%);
      border: 1px solid rgba(139,247,113,0.4);
      color: #8bf771;
      padding: 14px 18px;
      border-radius: 10px;
      font-weight: 500;
      backdrop-filter: blur(8px);
      -webkit-backdrop-filter: blur(8px);
      text-align: center;
      box-shadow: 0 0 12px rgba(34,136,72,0.5);
    ">
      ⚠️ This system contains confidential data
    </div>
    {% endif %}
  </div>
</div>
